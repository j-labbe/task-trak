{
    "compileOnSave": true,
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "module": "commonjs",
        "target": "ES6",
        "allowJs": true,
        "checkJs": true,
        "rootDir": ".",
        "jsx": "preserve",
        "removeComments": true,
        "baseUrl": "./",

        "paths": {
            "@components": ["components/*"],
            "@auth": ["pages/api/auth/*"],
            "@userDao": ["pages/api/dao/userDao/*"],
            "@taskDao": ["pages/api/dao/taskDao/*"],
            "@contexts": ["contexts/*"],
            "@styles": ["styles/*"],
            "@utils": ["utils/*"],
            "@demo": ["demo/*"]
        }
    },
    "include": ["next-env.d.ts", "pages/**/*", "src/**/*", "*.ts", "*.tsx", "old_d.tssss"],
    "exclude": ["node_modules"]
}
